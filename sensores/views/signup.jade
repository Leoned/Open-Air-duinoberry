extends ./layout2.jade
block contenido
	div(class="col-md-6 remove-float mx-auto top-space")
		h2 Creación de nuevo usuario
			img(src="/public/img/new.png",style="float:right")
		form(action="/users",method="POST")
			div(class="form-group")
				label(for="name") Nombre
				input(type="text",name="name",placeholder="Nombre",id="name",class="form-control")
			div
				label(for="email") Email
				input(type="text",name="email",placeholder="Email",id="email",class="form-control")
			div
				label(for="username") Username
				input(type="text",name="username",placeholder="Username",id="username",class="form-control")
			div
				label(for="password") Contraseña
				input(type="password",name="password",placeholder="Password",id="password",class="form-control")
			div
				label(for="password") Confirma tu Contraseña
				input(type="password",name="password_confirmation",placeholder="Confirma tu Password",id="password_confirmation",class="form-control")
			div(class="row top-space")
				div(class="col-xs-12 col-sm-6")
					input(type="submit" value="Registrar" class="btn btn-info")
				div(class="col-xs-12 col-sm-6 text-right")
					a(href="/login") Ya estoy registrado, Ingresar
